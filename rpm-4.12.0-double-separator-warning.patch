 	/* Automatic dependencies don't relate to spec lines */
 	if (tagflags & (RPMSENSE_FIND_REQUIRES|RPMSENSE_FIND_PROVIDES)) {
-	    rpmlog(RPMLOG_ERR, "%s: %s\n", emsg, r);
+	    rpmlog(lvl, "%s: %s\n", emsg, r);
 	} else {
-	    rpmlog(RPMLOG_ERR, _("line %d: %s: %s\n"),
